{
  "name": "luxury-automation-dashboard",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "node scripts/check-env.js && next build && npm run build:cleanup",
    "build:cleanup": "find .next -name '*.pack' -delete 2>/dev/null || true; rm -rf .next/cache 2>/dev/null || true",
    "build:production": "rm -rf .next && npm run build",
    "start": "next start",
    "lint": "next lint",
    "deploy": "npm run build && npx wrangler pages deploy out --project-name=ghost-automation-dashboard-three --compatibility-date=2024-01-01",
    "deploy:functions": "npm run build && npx wrangler pages deploy .next --project-name=ghost-automation-dashboard-three --compatibility-date=2024-01-01",
    "test:api": "node test_end_to_end_workflow.ts",
    "test:performance": "node test_performance_benchmark.ts"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.24.3",
    "@aws-sdk/client-s3": "^3.658.1",
    "@aws-sdk/s3-request-presigner": "^3.658.1",
    "@cloudflare/kv-asset-handler": "^0.4.0",
    "@headlessui/react": "^1.7.17",
    "@supabase/supabase-js": "^2.39.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "clsx": "^2.0.0",
    "cors": "^2.8.5",
    "date-fns": "^2.30.0",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "framer-motion": "^10.16.16",
    "form-data": "^4.0.0",
    "lucide-react": "^0.294.0",
    "next": "14.0.4",
    "node-fetch": "^3.3.2",
    "openai": "^5.1.1",
    "playwright": "^1.52.0",
    "react": "^18",
    "react-dom": "^18",
    "react-hot-toast": "^2.4.1",
    "recharts": "^2.8.0",
    "tailwind-merge": "^2.2.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@cloudflare/next-on-pages": "^1.13.12",
    "@types/form-data": "^2.5.1",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@types/uuid": "^9.0.8",
    "autoprefixer": "^10.0.1",
    "eslint": "^8",
    "eslint-config-next": "14.0.4",
    "postcss": "^8",
    "tailwindcss": "^3.3.0",
    "typescript": "^5",
    "vercel": "^42.3.0",
    "wrangler": "^4.19.1"
  }
